{

	"id": "com.sap.sample.coloredbox",
	"version": "1.0.1",
	"name": "Colored Box",
	"description": "A colored box",
	"newInstancePrefix": "ColoredBox",
	"icon": "https://laura-p-95.github.io/coloredbox/sdg_icon.png",
	"vendor": "Laura Pucci",
	"eula": "",
	"license": "",
	"webcomponents": [
		{
			"kind": "main",
			"tag": "com-sap-sample-coloredbox",
			"url": "https://laura-p-95.github.io/coloredbox/coloredbox.js",
			"integrity": "",
			"ignoreIntegrity": true
		},
		{
			"kind": "builder",
			"tag": "com-sap-sample-coloredbox-builder",
			"url": "https://laura-p-95.github.io/coloredbox/coloredbox_builder.js",
			"integrity": "",
			"ignoreIntegrity": true
		}
	],

	"properties": {
		"apiKey": {
			"description": "Api Key of ChatGPT",
			"type": "string",
			"default": ""
		},
		"color": {
			"type": "string",
			"description": "Background color",
			"default": "purple"
		},
		"height": {
			"type": "integer",
			"default": 100
		},
		"max_tokens": {
			"description": "Result Max Length",
			"type": "integer",
			"default": 1024
		},
		"opacity": {
			"type": "number",
			"description": "Opacity",
			"default": 1
		},
		"width": {
			"type": "integer",
			"default": 100
		}
	},

	"methods": {
		"setColor": {
			"description": "Sets the background color.",
			"parameters": [
				{
					"name": "newColor",
					"type": "string",
					"description": "The new background color"
				}
			],
			"body": "this.color = newColor;"
		},

		"getColor": {
			"returnType": "string",
			"description": "Returns the background color.",
			"body": "return this.color;"

		},
		"setOpacity": {
			"description": "Sets the background opacity.",
			"parameters": [
				{
					"name": "newOpacity",
					"type": "number",
					"description": "The new background opacity"
				}
			],
			"body": "this.opacity = newOpacity;"
		},

		"getOpacity": {
			"returnType": "number",
			"description": "Returns the background opacity.",
			"body": "return this.opacity;"

		}
	},
	"events": {
		"onClick": {
			"description": "Called when the user clicks the Colored Box."
		}
	}
}
